<h3>Episodes that are not yet live</h3>

<ul>
    <% for episode in @episodes do %>
        <li><%= link_to(episode.slug, episode_path(episode)) %> <%=episode.status %>
        	<%if episode.publication_time and episode.publication_time > Date.current() %>| valid after: <%=episode.publication_time%><% end %></li>
    <% end %> 
</ul>